                                    <Border Grid.Column="2" Grid.Row="1" BorderBrush="LightGray" BorderThickness="2"   Grid.RowSpan="1">
                                        <Canvas>
                                            <Grid Name="grid_desrption_concept_A3" Style="{StaticResource GridConseptStyle}">
                                                <Rectangle Fill="White" />
                                                <StackPanel Orientation="Vertical" Background="White" Margin="30" >
                                                    <ScrollViewer Height="400" ViewChanged="ScrollViewer_ViewChanged"  >
                                                        <StackPanel>
                                                            <TextBlock Style="{StaticResource SubheaderTextStyle}" FontSize="30" Margin="20">איזומטריה</TextBlock>
                                                            <TextBlock Style="{StaticResource BodyTextStyle}" Margin="20"> הגדרה: שווה-אורך, זוהי שיטת שרטוט תלת-ממד המתייחדת ביחס אורכים נכון.</TextBlock>
